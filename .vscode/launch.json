{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Task",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/src/index.js",
      "args": ["${relativeFile}"]
    },
    {
      "name": "Launch Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand", "--findRelatedTests", "${relativeFile}"],
      "env": {
        "NODE_OPTIONS": "--experimental-vm-modules"
      }
    }
  ]
}
